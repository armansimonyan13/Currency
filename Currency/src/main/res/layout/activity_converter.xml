<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_toLeftOf="@+id/separator">

		<ImageView
				android:id="@+id/from_flag"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:src="@drawable/flag_amd" />

		<EditText
				android:id="@+id/from_count"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:inputType="number"
				android:gravity="right"
				android:layout_below="@id/from_flag"
				android:layout_alignParentLeft="true"
				android:layout_alignParentRight="true"
				android:text="1" />
	</RelativeLayout>

	<ImageView
		android:id="@id/separator"
	    android:layout_width="2dp"
	    android:layout_height="100dp"
	    android:background="#f00"
	    android:layout_centerHorizontal="true" />

	<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_toRightOf="@id/separator">

		<ImageView
				android:id="@+id/to_flag"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:src="@drawable/flag_amd" />

		<EditText
				android:id="@+id/to_count"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:inputType="number"
				android:gravity="right"
				android:layout_below="@id/to_flag"
				android:layout_alignParentLeft="true"
				android:layout_alignParentRight="true"
				android:text="0000.0000" />
	</RelativeLayout>
</RelativeLayout>